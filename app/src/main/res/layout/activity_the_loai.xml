<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/nen2"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.AssignmentDuAnMau.MainActivity">
    <ImageView
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:src="@drawable/tlsach"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/edtMaTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FBF9F9"
        android:hint="Mã thể loại" />

    <EditText
        android:id="@+id/edtTenTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FDF7F7"
        android:hint="Tên thể loại" />

    <EditText
        android:id="@+id/edtViTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#F6F3F3"
        android:hint="Vị trí" />

    <EditText
        android:id="@+id/edtMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#F4F0F0"
        android:hint="Mô tả" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnaddTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addTheLoai"
            android:text="Lưu"
            android:textColor="#F0F5F8"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:background="#FF5722"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btnHuyTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="#FF5722"
            android:textColor="#F0F5F8"
            android:textStyle="bold"
            android:text="Huỷ" />
    </LinearLayout>

    <Button
        android:id="@+id/btnShowTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showTheLoai"
        android:layout_marginTop="10dp"
        android:text="Hiển Thị"
        android:textStyle="bold"
        android:background="#CDDC39"
        android:textColor="#100101"
        tools:ignore="OnClick" />

</LinearLayout>
